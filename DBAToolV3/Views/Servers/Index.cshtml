@model IEnumerable<DBAToolV3.Data.Models.Server>

@{
    ViewBag.Title = "Indexxxxxxxxxxxxxx";
}
<html lang="en">
<head>

    <title>DBA Tools </title>


</head>
<body>


    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Servers</h1>
            <p class="lead text-muted">List of Servers  </p>
            <p>
                <a href="/Servers/Create" class="btn btn-primary my-2">Add Server</a>
                <a href="#" class="btn btn-secondary my-2">Help</a>
            </p>
        </div>
    </section>


    <div class="row">

        <div class="col-md-6">   
                <table class="table">
                    <tr>
                       <th>
                           Icon
                       </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Memory)
                        </th>

                        <th>
                            
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fa fa-camera-retro fa-lg"></i>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Memory)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            



        </div>

        


    </div>



</body>


</html>


